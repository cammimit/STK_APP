{
	"restartable": "rs",
	"ignore": [
		".git",
		"LEGACY/**",
		"REFACTOR/**",
		"TSAPPSRC/**",
		"spec/**",
		"node_modules/**/node_modules"
	],
	"verbose": true,
	"execMap": {
		"js": "node --harmony"
	},
	"events": {
		"restart": "BUILT/server.js"
	},
	"watch": [
		"BUILT/server.js",
		"tests/",
		"messages/"
	],
	"env": {
		"NODE_ENV": "dev"
	},
	"ext": "js,json,css"
}